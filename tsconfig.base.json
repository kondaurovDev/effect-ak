{
  "compilerOptions": {
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "composite": true,
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "moduleResolution": "NodeNext", 
    "moduleDetection": "force",
    "baseUrl": ".",
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "customConditions": ["effect-ak-dev"],
    "paths": {
      "@effect-ak/ai": ["./packages/ai/src/index.js"],
      "@effect-ak/aws": ["./packages/aws/src/index.js"],
      "@effect-ak/google-api": ["./packages/google-api/src/index.js"],
      "@effect-ak/misc": ["./packages/misc/src/index.js"],
      "@effect-ak/tg-bot": ["./packages/tg-bot/src/index.js"],
    }
  },
  "exclude": [
    "packages/notion/*"
  ]
}